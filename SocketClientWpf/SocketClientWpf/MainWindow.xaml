<Window x:Class="SocketClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TCP Client" Height="450" Width="600"
        Background="#f2f2f2" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Chat Area -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
        </Grid.RowDefinitions>

        <!-- 🟦 Header (Connection Info) -->
        <Border Background="#FF6CDCEE" Padding="10" CornerRadius="8" Grid.Row="0">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="TCP Chat Client" FontSize="18" Foreground="White" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Sunucu:" Foreground="White"/>
                    <TextBox x:Name="ServerIP" Width="100" Margin="5,0" Text="127.0.0.1"/>
                    <TextBlock Text="Port:" Foreground="White" Margin="10,0,0,0"/>
                    <TextBox x:Name="Port" Width="60" Margin="5,0" Text="5000"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Kullanıcı ID:" Foreground="White"/>
                    <TextBox x:Name="User_Id" Width="100" Margin="5,0"/>
                    <Button x:Name="btnConnect" Content="Bağlan" Margin="10,0,0,0" Padding="5,2"
                            Click="btnConnect_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 💬 Chat Area -->
        <Border Background="White" Grid.Row="1" Margin="0,10" CornerRadius="8" Padding="10"
                BorderBrush="#CCC" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="Recieve"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         BorderThickness="0"
                         Background="Transparent"
                         FontSize="14"/>
            </ScrollViewer>
        </Border>

        <!-- ✉️ Message Input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="Message"
                     Width="180" Height="30" Margin="0,0,10,0"
                     Text="Mesaj yaz..." Foreground="Gray"
                     GotFocus="ClearPlaceholder" LostFocus="RestorePlaceholder"/>

            <TextBox x:Name="Recipient_Id"
                     Width="80" Height="30" Margin="0,0,10,0"
                     Text="Alıcı ID" Foreground="Gray"
                     GotFocus="ClearPlaceholder" LostFocus="RestorePlaceholder"/>

            <Button x:Name="btnGonder" Content="Gönder" Width="60" Height="30"
                    Click="btnGonder_Click"/>
        </StackPanel>
    </Grid>
</Window>
